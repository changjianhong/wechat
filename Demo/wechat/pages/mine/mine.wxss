@import "../showimg/showimg.wxss";

.page {
    background-color: #F2F2F2;
}

.head {
    position:relative;
    background-color: #fff;
}

.background {
    opacity: .4;
    width:100%;
    height: 100%;
    z-index: -1000;
}

.userInfo {
    position: absolute;
    width:100%;
    text-align: center;
    bottom: 0;
}
.userInfo-avatar {
    border-radius: 50%;
    height:120rpx;
    width:120rpx;
}
.userInfo-gender {
    margin-left: 10rpx;
    height: 30rpx;
    width:30rpx;
}
.userInfo view {
    color: #69737F;
    font: 50rpx;
    margin-top: 16rpx;
}

.category {
    background-color: #fff;
}
.category_section {
    border-bottom: 1rpx solid #eee;
}
.sectionSpace {
    background: #F2F2F2;
    min-height: 30rpx;
    border-bottom: 1rpx solid #eee;
}
.category_item {
    background-color: #fff;
    display: flex;
    margin: 0 0 0 30rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
    cursor: pointer;
}
.category_item:last-child {
    border-bottom: none;
} 
.category_item image {
    width: 45rpx;
    height: 45rpx;
}
.title {
    flex: 1;
    font-family: "微软雅黑";
    font-size: 14rpx;
    margin: auto 20rpx;
}
